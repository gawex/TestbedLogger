<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiscoverDevicesActivity">

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/activity_discover_devices_pgb_progress"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/vsb"
        app:layout_constraintBottom_toTopOf="@+id/activity_discover_lsv_devices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mpb_progressStyle="horizontal"
        app:mpb_useIntrinsicPadding="false" />

    <ListView
        android:id="@+id/activity_discover_lsv_devices"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cacheColorHint="@color/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_discover_devices_pgb_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>