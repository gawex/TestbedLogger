<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_overview_csl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    tools:context=".fragments.OverviewFragment">

    <LinearLayout
        android:id="@+id/fragment_overview_lnl_last_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@color/colorGrey"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_overview_lnl_values_summary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fragment_overview_txv_last_value_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/fragment_overview_last_value_label"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_overview_txv_last_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/digital7"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/VSB"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_overview_last_value_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/FEI"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_overview_lnl_values_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_overview_lnl_last_value">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/fragment_overview_tbl_change_sumary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            app:tabBackground="@drawable/tab_background_fei"
            app:tabIndicatorColor="@color/FEI"
            app:tabSelectedTextColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/fragment_overview_lnl_this_day_values"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/colorGrey"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/fragment_overview_txv_this_day_value_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:padding="2dp"
                android:text="@string/fragment_overview_this_day_label"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_overview_txv_this_day_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/digital7"
                android:padding="2dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/VSB"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_overview_txv_this_day_value_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="2dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/FEI"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_overview_lnl_this_week_values"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/colorGrey"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/fragment_overview_txv_this_week_value_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:padding="2dp"
                android:text="@string/fragment_overview_this_week_label"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_overview_txv_this_week_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/digital7"
                android:padding="2dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/VSB"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_overview_txv_this_week_value_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="2dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/FEI"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_overview_lnl_this_month_values"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="@color/colorGrey"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/fragment_overview_txv_this_month_value_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:padding="2dp"
                android:text="@string/fragment_overview_this_month_label"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_overview_txv_this_month_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/digital7"
                android:padding="2dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/VSB"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_overview_txv_this_month_value_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="2dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/FEI"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>