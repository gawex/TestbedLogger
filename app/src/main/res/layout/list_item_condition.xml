<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_condition_lnl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="2dp">

    <RelativeLayout
        android:id="@+id/list_item_condition_rel_status"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/list_item_condition_imv_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_fail"
            tools:ignore="ContentDescription" />

        <ProgressBar
            android:id="@+id/list_item_condition_pgb_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary" />

    </RelativeLayout>

    <TextView
        android:id="@+id/list_item_condition_txv_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:minLines="2"
        android:scrollHorizontally="false"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

</LinearLayout>