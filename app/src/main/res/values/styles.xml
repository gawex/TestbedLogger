<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:datePickerStyle">@style/MyDatePickerDialogStyle</item>
        <item name="android:timePickerStyle">@style/MyTimePickerDialogStyle</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="actionMenuTextAppearance">@style/MyActionBarStyle.Menu</item>

        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>

    </style>

    <style name="MyDatePickerDialogStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
    </style>

    <style name="MyTimePickerDialogStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:numbersSelectorColor">@color/colorPrimary</item>
    </style>

    <style name="MyActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyActionBarStyle.Title</item>

    </style>

    <style name="MyActionBarStyle.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyActionBarStyle.Menu" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12dp</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
